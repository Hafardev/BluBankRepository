    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include android:id="@+id/top"
        layout="@layout/content_top_view_appbar" />


    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
