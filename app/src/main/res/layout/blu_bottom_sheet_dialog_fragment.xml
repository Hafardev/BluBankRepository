<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sheet_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blu_color_background_transaction"
    android:paddingHorizontal="@dimen/_2dp"
    android:paddingTop="@dimen/_5dp"
    android:paddingBottom="@dimen/_17dp">

    <View
        android:id="@+id/sheet_title"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:layout_marginVertical="5dp"
        android:background="@color/gray_3"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.65" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sheet_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sheet_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
